{
    "version": 2,
    "builds": [
      {
        "src": "client",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      },
      {
        "src": "server",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/$1" },
      { "handle": "filesystem" },
      { "src": "/.*", "dest": "/client/index.html" }
    ]
  }
  